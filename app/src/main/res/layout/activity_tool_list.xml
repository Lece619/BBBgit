<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_strength_tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="나무"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/element1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="암석"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/element2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="금속"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/element3" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/monster_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/protobox"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:text="monster_information"
                android:id="@+id/monster_info"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:text="생  성"
                android:id="@+id/btn_mktool"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:text="강  화"
                android:id="@+id/btn_strength"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:text="조  합"
                android:id="@+id/btn_combine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:text="삭  제"
                    android:id="@+id/btn_remove"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:onClick="onClick"
                    android:text="잠  금"
                    android:id="@+id/btn_protect"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ada65757">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:text="btn1"
                    android:id="@+id/mbtn1" />
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:text="btn2"
                    android:id="@+id/mbtn2"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:text="btn3"
                    android:id="@+id/mbtn3"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:text="btn4"
                    android:id="@+id/mbtn4"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn5"
                    android:id="@+id/mbtn5"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn6"
                    android:id="@+id/mbtn6"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn7"
                    android:id="@+id/mbtn7"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn8"
                    android:id="@+id/mbtn8"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn9"
                    android:id="@+id/mbtn9"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn10"
                    android:id="@+id/mbtn10"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn11"
                    android:id="@+id/mbtn11"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn12"
                    android:id="@+id/mbtn12"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn13"
                    android:id="@+id/mbtn13"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn14"
                    android:id="@+id/mbtn14"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn15"
                    android:id="@+id/mbtn15"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn16"
                    android:id="@+id/mbtn16"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn17"
                    android:id="@+id/mbtn17"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn18"
                    android:id="@+id/mbtn18"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="btn19"
                    android:id="@+id/mbtn19"/>
                <Button
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#000000"

                    android:text="btn20"
                    android:id="@+id/mbtn20"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="뒤 로 가 기"
            android:id="@+id/btn_back"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>
