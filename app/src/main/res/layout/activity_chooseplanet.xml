<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/_back2">

    <HorizontalScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="540dp">

        <FrameLayout
            android:id="@+id/choosePlanet_layout"
            android:layout_width="1850sp"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_marginLeft="100sp"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:onClick="onClick"
                    android:id="@+id/btn1"/>
                <ImageView
                    android:layout_marginLeft="300sp"
                    android:layout_width="250sp"
                    android:layout_height="250sp"
                    android:onClick="onClick"
                    android:id="@+id/btn2"
                    android:src="@drawable/planet_2"/>
                <ImageView
                    android:layout_marginLeft="650sp"
                    android:layout_marginRight="50sp"
                    android:layout_width="300sp"
                    android:layout_height="300sp"
                    android:onClick="onClick"
                    android:id="@+id/btn3"/>
            </LinearLayout>
            <!--<SurfaceView
                android:id="@+id/choosePlanet_surface"
                android:layout_width="1850dp"
                android:layout_height="match_parent">
                &lt;!&ndash;
                android:theme="@android:style/Theme.Translucent"&ndash;&gt;

            </SurfaceView>-->

<!--            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text=" 뒤로가기 "
                android:onClick="onClick"
                android:textSize="10dp"
                android:id="@+id/btn4"
                android:background="@drawable/planet_4"/>-->
        </FrameLayout>
    </HorizontalScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" 뒤로가기 "
        android:onClick="onClick"
        android:textSize="10dp"
        android:id="@+id/btn4"
        android:background="@drawable/planet_4"/>
</LinearLayout>
