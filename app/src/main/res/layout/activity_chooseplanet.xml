<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/_back2">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="540dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:layout_margin="100dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text=" "
                android:onClick="onClick"
                android:id="@+id/btn1"
                android:background="@drawable/planet_1"/>
            <Button
                android:layout_margin="110dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text=" "
                android:onClick="onClick"
                android:id="@+id/btn2"
                android:background="@drawable/planet_2"/>
            <Button
                android:layout_marginLeft="1000dp"
                android:layout_marginRight="30dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:text=" "
                android:onClick="onClick"
                android:id="@+id/btn3"
                android:background="@drawable/planet_3"/>
<!--            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text=" 뒤로가기 "
                android:onClick="onClick"
                android:textSize="10dp"
                android:id="@+id/btn4"
                android:background="@drawable/planet_4"/>-->
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" 뒤로가기 "
        android:onClick="onClick"
        android:textSize="10dp"
        android:id="@+id/btn4"
        android:background="@drawable/planet_4"/>
</LinearLayout>
